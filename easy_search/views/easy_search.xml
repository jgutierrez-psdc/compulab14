<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="easy_search_config_form_view" model="ir.ui.view">
            <field name="name">easy.search.config.form</field>
            <field name="model">easy.search.config</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="type"/>
                            </h3>
                        </div>
                        <group>
                            <field name="model_id"/>
                            <field name="field_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="easy_search_config_tree_view" model="ir.ui.view">
            <field name="name">easy.search.config.tree</field>
            <field name="model">easy.search.config</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="type"/>
                    <field name="model_id"/>
                    <field name="field_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id='easy_search_config_search_view' model='ir.ui.view'>
            <field name='name'>easy.search.config.search</field>
            <field name='model'>easy.search.config</field>
            <field name='arch' type='xml'>
                <search string=''>
                    <field name="model_id"/>
                    <field name="type"/>
                    <group string='Group By'>
                        <filter name='by_type' string='Type' context="{'group_by': 'type'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!--TODO the most powerfull window action-->
        <record id="easy_search_config_window_action" model="ir.actions.act_window">
            <field name="name">Search Search Config</field>
            <field name="res_model">easy.search.config</field>
            <field name="view_mode">tree,form,search</field>
            <field name="target">current</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem
                id="easy_search_menu"
                name="Easy Search Config"
                parent="base.menu_administration"
                action="easy_search_config_window_action"
                sequence="10"
                groups="easy_search.easy_search_group"
        />
    </data>
</odoo>

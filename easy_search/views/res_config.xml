<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='multi_company']" position="after">
                    <div id="easy_search">
                        <h2>Easy Search</h2>
                        <div class="row mt16 o_settings_container">

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_sales_easy_search" class="font-weight-bold"/>
                                </div>
                                <div class="o_setting_right_pane" id="sale_easy_search">
                                    <label for="module_sales_easy_search"/>
                                    <div class="text-muted">
                                        Enable Easy Search In Sales.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_purchase_easy_search" class="font-weight-bold"/>
                                </div>
                                <div class="o_setting_right_pane" id="purchase_easy_search">
                                    <label for="module_purchase_easy_search"/>
                                    <div class="text-muted">
                                        Enable Easy Search In Purchase.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_crm_easy_search" class="font-weight-bold"/>
                                </div>
                                <div class="o_setting_right_pane" id="crm_easy_search">
                                    <label for="module_crm_easy_search"/>
                                    <div class="text-muted">
                                        Enable Easy Search In CRM.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_stock_easy_search" class="font-weight-bold"/>
                                </div>
                                <div class="o_setting_right_pane" id="stock_easy_search">
                                    <label for="module_stock_easy_search"/>
                                    <div class="text-muted">
                                        Enable Easy Search In Inventory.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_account_easy_search" class="font-weight-bold"/>
                                </div>
                                <div class="o_setting_right_pane" id="account_easy_search">
                                    <label for="module_account_easy_search"/>
                                    <div class="text-muted">
                                        Enable Easy Search In Account.
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
